{
  "name": "vimic",
  "version": "1.2.3",
  "description": "A Vitest mocking helper that simplifies the mocking process.",
  "author": "McMomo",
  "contributors": [
    {
      "name": "McMomo",
      "url": "https://github.com/SleepAPI"
    }
  ],

  "keywords": ["vitest", "testing", "mocking", "typescript"],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SleepAPI/vimic.git"
  },

  "main": "./dist/vimic.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": ["dist"],

  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test-watch": "vitest",
    "lint": "eslint . && prettier --check .",
    "local": "npm run build && npm link",
    "release": "npm run build && npm publish --access public"
  },

  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@eslint/json": "^0.8.0",
    "@eslint/markdown": "^6.2.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.17.0",
    "vite": "^4.0.0",
    "vitest": "^0.34.0"
  }
}
